# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings:
# A newline ending every file
# Use CRLF line break
# Use 4 spaces as indentation
[*]
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

# HTML
[*.html]
indent_size = 2

# JSON config files
[*.json]
indent_size = 2

# Yml config files
[*.yml]
indent_size = 2

# TOML config files
[*.toml]
indent_size = 2
